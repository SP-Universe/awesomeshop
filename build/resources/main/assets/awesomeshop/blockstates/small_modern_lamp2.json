{
  "defaults": { "model": "awesomeshop:block/small_modern_lamp2" },
  "multipart": [
    {
      "when": { "facing" : "north"},
      "apply": { "model": "awesomeshop:block/small_modern_lamp2" }
    },
    {
      "when": { "facing" : "south"},
      "apply": { "model": "awesomeshop:block/small_modern_lamp2", "y":  180 }
    },
    {
      "when": { "facing" : "west"},
      "apply": { "model": "awesomeshop:block/small_modern_lamp2", "y":  270 }
    },
    {
      "when": { "facing" : "east"},
      "apply": { "model": "awesomeshop:block/small_modern_lamp2", "y":  90 }
    }
  ]
}